<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NameStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NameCityStyle">
        <item name="android:textColor">#5A5A5A</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Temperature">
        <item name="android:textColor">#2a2a2a</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">fill</item>
    </style>

    <style name="Params">
        <item name="android:textColor">#3A3A3A</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">fill</item>
        <item name="android:textSize">18sp</item>
        <item name="android:titleMarginTop">10dp</item>
    </style>
</resources>